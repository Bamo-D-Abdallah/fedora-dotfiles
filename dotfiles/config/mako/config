# ~/.config/mako/config

sort=+time
on-button-left=invoke-default-action
on-button-right=dismiss
format=<b>%a  -   %s</b>\n\n%b
max-history=100
on-button-left=dismiss --no-history
on-button-right=dismiss



# Timeout
default-timeout=8000
ignore-timeout=1

# Size
width=500
height=300

outer-margin=0
margin=10
padding=12

# Border styling
border-size=2
border-radius=12
border-color=#FFFFFFAA

# Font
font=Sans 12

# Icons
icons=1
max-icon-size=64
icon-location=left

# Text
text-alignment=left
text-color=#FFFFFFFF

# Progress bar
progress-color=#5588AAFF

# Background color default (normal)
background-color=#285577D9

# Layer & anchor
layer=overlay
anchor=top-right

# Override styles based on urgency (critical + important)
[urgency=critical]
background-color=#992222D9
border-color=#FF5555CC
progress-color=#FF4444CC
text-color=#FFFFFFFF

[urgency=normal]
background-color=#285577D9
border-color=#5588AAD9
progress-color=#5588AAD9
text-color=#FFFFFFFF

[urgency=low]
background-color=#284455D9
border-color=#446688D9
progress-color=#446688D9
text-color=#CCCCCCFF


[mode=do-not-disturb]
invisible=1
